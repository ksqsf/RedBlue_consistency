    <servlet-name>StoreBuyNow</servlet-name>
    <servlet-class>edu.rice.rubis.servlets.StoreBuyNow</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>BuyNow</servlet-name>
    <servlet-class>edu.rice.rubis.servlets.BuyNow</servlet-class>
