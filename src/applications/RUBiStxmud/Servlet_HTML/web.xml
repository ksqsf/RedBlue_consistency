  <servlet>
    <servlet-name>BuyNowAuth</servlet-name>
    <servlet-class>edu.rice.rubis.servlets.BuyNowAuth</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>PutBid</servlet-name>
