<web-app>

  <display-name>RUBiS</display-name>
  <description>
    Rice University Bidding System
  </description>
  
  <context-param>
    <param-name>dcId</param-name> 
    <param-value>@dcId@</param-value>
  </context-param>
  <context-param>
    <param-name>dcXMLConfigFile</param-name> 
    <param-value>@topologyfile@</param-value>
  </context-param>
  <context-param>
    <param-name>nthreads</param-name> 
    <param-value>@nthreads@</param-value>
  </context-param>
  <context-param>
    <param-name>proxyId</param-name> 
    <param-value>@proxyId@</param-value>
  </context-param>
  
  <context-param>
    <param-name>dbpool</param-name> 
    <param-value>@dbpool@</param-value>
  </context-param>
  
  <context-param>
    <param-name>totalproxy</param-name> 
    <param-value>@totalproxy@</param-value>
  </context-param>
  
  <context-param>
    <param-name>dcCount</param-name> 
    <param-value>@dcCount@</param-value>
  </context-param>
  
  <context-param>
    <param-name>ssId</param-name> 
    <param-value>@ssId@</param-value>
  </context-param>
  
  <context-param>
    <param-name>scratchpadNum</param-name> 
    <param-value>@scratchpadNum@</param-value>
  </context-param>
  
  <context-param>
    <param-name>dbFile</param-name> 
    <param-value>@dbFile@</param-value>
  </context-param>

